<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pilihan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="permainan.com.permainananak.Pilihan">

    <TextView
        android:text="PILIHAN PERMAINAN"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:fontFamily="cursive"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

    <Button
        android:text="Balap Karung"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1" />

    <Button
        android:text="Bola Bekel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2" />

    <Button
        android:text="Congklak"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3" />

    <Button
        android:text="Egrang"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button4" />

    <Button
        android:text="Engklek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button5" />

    <Button
        android:text="Gasing"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button6" />

    <Button
        android:text="Kelereng"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button7" />

    <Button
        android:text="Layang-layang"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button8" />

    <Button
        android:text="Lompat Tali"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button9" />

    <Button
        android:text="Petak Umpet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button10" />
        </LinearLayout>
    </ScrollView>
    </LinearLayout>

