<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kotak_dialog"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assalaam.test.id.test.KotakDialog">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:id="@+id/toastBtn"
        android:text="@string/toastTextBtn"
        android:backgroundTint="@android:color/transparent"></Button>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:id="@+id/listDialogBtn"
        android:text="@string/listDialogTextBtn"
        android:backgroundTint="@android:color/transparent"></Button>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:id="@+id/exitBtn"
        android:text="@string/exitTextBtn"
        android:backgroundTint="@android:color/transparent"></Button>

</LinearLayout>
