<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/a"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assalaam.test.id.test.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


    <Button
        android:text="Linear Layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Button1"
        android:layout_alignParentTop="true"
        />

        <Button
            android:text="Relative Layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Button2"
            android:layout_alignParentTop="true" />

    <Button
        android:text="Table Layout "
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Button3" />

    <Button
        android:text="Tampilan Gambar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Button4" />

    <Button
        android:text="Auto Complette"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Button5" />

        <Button
            android:text="Kotak Dialog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Button8" />

    <Button
        android:text="Picker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Button6" />

        <Button
            android:text="Check Box"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Button9" />

        <Button
            android:text="Radio Button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Button10" />

    <Button
        android:text="List View"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Button7" />

        <Button
            android:text="CallActivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Button12" />
        <Button
            android:text="CallActivity2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Button13" />

        <Button
        android:text="Playing Audio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Button11" />

        <Button
            android:text="Kalkulator Berat Badan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Button14" />

        <Button
            android:text="Web View"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Button15" />

        <Button
            android:text="Camera"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Button16" />


</LinearLayout>

</ScrollView>
